@model Order

<a asp-action="List" class="btn btn-secondary">
    <i class="fas fa-arrow-left"></i> Back to List
</a>

<div class="card shadow-sm p-4" style="max-width: 600px; margin: auto;">
    <h3 class="mb-4">Update Order</h3>

    <form asp-action="UpdateOrder" method="post">
        <input asp-for="Id" type="hidden" />

        <div class="form-group mb-3">
            <label asp-for="CustomerId" class="form-label"></label>
            <input asp-for="CustomerId" class="form-control" placeholder="Enter customer id" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="ProductId" class="form-label"></label>
            <input asp-for="ProductId" class="form-control" placeholder="Enter product id" />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Quantity" class="form-label"></label>
            <input asp-for="Quantity" class="form-control" placeholder="Enter quantity" />
        </div>

        <div class="form-group mb-4">
            <label asp-for="OrderDate" class="form-label"></label>
            <input asp-for="OrderDate" type="date" class="form-control" />
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-plus"></i> Save
            </button>
        </div>
    </form>
</div>
