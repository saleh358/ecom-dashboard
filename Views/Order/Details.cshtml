@model Order

<div class="card shadow-sm position-relative" style="max-width: 850px; margin: auto;">
    <a href="@Url.Action("List", "Order")"
       class="btn btn-sm btn-primary position-absolute"
       style="top: 10px; left: 10px; border-radius: 50px; padding: 5px 15px;">
        <i class="fas fa-arrow-left"></i> Back
    </a>

    <div class="card-body">
        <h3 class="card-title text-center mb-3">Order #@Model.Id</h3>

        <p class="text-muted mb-1"><strong>Customer Id:</strong> @Model.CustomerId</p>
        <p class="text-muted mb-1"><strong>Order Date:</strong> @Model.OrderDate.ToString("yyyy-MM-dd")</p>

        <hr />

        <h5 class="mb-2">Order Items</h5>
        <table class="table table-sm table-bordered table-striped align-middle text-center mb-0">
            <thead class="table-light">
                <tr>
                    <th style="width:80px">#</th>
                    <th style="width:140px">Product Id</th>
                    <th style="width:140px">Quantity</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.OrderItems?.Count > 0)
                {
                    for (int i = 0; i < Model.OrderItems.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model.OrderItems[i].ProductId</td>
                            <td>@Model.OrderItems[i].Quantity</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-muted">No items found for this order.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
